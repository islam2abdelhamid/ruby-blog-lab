<table class="table" border="2">   
      <thead>   
      <tr>   
        <th>Name</th>   
        <th>Price</th>   
        <th>Actions</th>   
      </tr>   
      </thead>   
      <tbody>   
      <% @posts.each do |post| %>   
          <tr>   
            <td><%= post.title %></td>   
            <td><%= truncate(post.content, :length => 75) %></td>   
               <div>   
               <td>   
                <%= link_to 'Show', post_path(post) %>   
                <%= link_to 'Edit', edit_post_path(post) %>   
                <%= link_to 'Delete', post_path(post), method: :delete %>   
              </div>   
            </td>   
          </tr>   
      <% end %>   
      </tbody>   
    </table>