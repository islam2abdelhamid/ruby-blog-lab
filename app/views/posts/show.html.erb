

<div class="card text-white bg-success">
  <div class="card-body">
    <h4 class="card-title"><%= @post.title %>   
</h4>
    <p class="card-text"><%= @post.content %>   
</p>
  </div>
</div>


<%  @post.comments.each do |comment| %> 
    <div class="card text-white bg-secondary mt-3 p-3">
        <div><p class="card-text"><%= comment.content %></p>
        <input type="hidden" name="_method" value="delete">
        <%= form_for :comment, url: {:controller=>"comments" ,:action=>"destroy"} do |f| %>   

        <input type="hidden" name="_method" value="delete">

        <input type="hidden" name="comment_id" value="<%= comment.id %>"/>

        <%= f.submit 'Delete', class:"btn btn-danger"%>
        <% end %>       
        </div>            
    </div>
<% end %>   



<%= form_for :comment, url: {:controller=>"comments" ,:action=>"create"} do |f| %>   

 <div class="form-group">
    <%= f.text_field :content ,placeholder:"content" , class:"form-control mt-5"%>
 </div>

 <input type="hidden" name="post_id" value="<%= @post.id %>"/>

 <%= f.submit 'Add Comment', class:"btn btn-primary"%>
<% end %>
</div>



